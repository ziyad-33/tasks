<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:alpha="0.5"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/newww" />

    <ImageView
        android:id="@+id/iv_gym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ss"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:id="@+id/text1_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"

/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
android:drawablePadding="8dp"
        android:drawableStart="@drawable/baseline_location_city_24"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/text2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
app:layout_constraintTop_toBottomOf="@+id/text1_id"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="24sp"
android:textColor="@color/blue"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/baseline_public_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/website"
        app:layout_constraintTop_toBottomOf="@+id/text2_2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>